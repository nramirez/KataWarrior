{
	"name" : "Kata Warrior",
	"description" : "Avoid distractions, solve katas, practice everyday and become a real warrior.",
	"manifest_version" : 2,
	"version" : "0.2",
	"background" :{
		"scripts": ["scripts/background.js"]
	},
	"options_page" : "views/options.html",
	"browser_action" : {
		"default_icon" : "icon.png"
	},
	"permissions" :[
		"https://www.codewars.com/api/v1/users/",
		"tabs",
		"notifications"
	],
	"browser_action": {
    "default_icon": {
      "24": "img/icon-24.png",
      "32": "img/icon-32.png"
    },
    "default_title": "Kata Warrior"
  },
  "icons": {
    "128": "img/icon-128.png",
    "48": "img/icon-48.png",
    "16":"img/icon-16.png"
  }

}